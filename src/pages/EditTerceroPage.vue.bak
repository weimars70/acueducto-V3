<script setup lang="ts">
import { ref, onMounted, computed, watch } from 'vue';
import { useQuasar } from 'quasar';
import { useRouter, useRoute } from 'vue-router';
import { terceroService } from '../services/api/tercero.service';
import type { UpdateTerceroDto } from '../types/tercero';
import { apiClient } from '../services/api/client';
import TerceroContactos from '../components/TerceroContactos.vue';

const $q = useQuasar();
const router = useRouter();
const route = useRoute();
const loading = ref(false);
const loadingData = ref(true);

// Opciones para selects
const ciudades = ref<any[]>([]);
const regimenes = ref<any[]>([]);
const tiposIdent = ref<any[]>([]);
const tiposImpuesto = ref<any[]>([]);

const formData = ref<UpdateTerceroDto>({});

// Computed: Determina si el tipo de identificación es NIT
const esNIT = computed(() => {
  // Comparar con el código/valor que representa NIT
  // Puede ser 'NIT', 'nit', '31', etc. - ajustar según la base de datos
  const tipoIdentStr = String(formData.value.tipoIdent || '').toUpperCase();
  return tipoIdentStr === 'NIT' || tipoIdentStr === '31';
});

// Función para calcular el dígito de verificación
const calcularDigitoVerificacion = (nit: string): number => {
  // Limpieza del NIT
  const nitLimpio = nit.replace(/[\s,.\-]/g, '');

  // Validación del NIT
  if (!nitLimpio || !/^\d+$/.test(nitLimpio)) {
    return 0;
  }

  // Procedimiento
  const vpri = [3, 7, 13, 17, 19, 23, 29, 37, 41, 43, 47, 53, 59, 67, 71];
  const z = nitLimpio.length;

  let x = 0;
  for (let i = 0; i < z; i++) {
    const y = parseInt(nitLimpio[i]);
    x += y * vpri[z - i - 1];
  }

  const y = x % 11;

  return (y > 1) ? 11 - y : y;
};

// Watcher: Calcular DV automáticamente cuando cambia la identificación
watch(() => formData.value.identificacion, (newValue) => {
  if (newValue && newValue.trim()) {
    formData.value.dv = calcularDigitoVerificacion(newValue);
  } else {
    formData.value.dv = undefined;
  }
});

// Watcher: Auto-completar nombre completo cuando NO es NIT
watch(
  [() => formData.value.nombres, () => formData.value.primerApellido, () => formData.value.segundoApellido, esNIT],
  () => {
    if (!esNIT.value) {
      // Concatenar nombres y apellidos
      const partes = [
        formData.value.nombres?.trim(),
        formData.value.primerApellido?.trim(),
        formData.value.segundoApellido?.trim()
      ].filter(Boolean);

      formData.value.nombre = partes.join(' ');
    }
  }
);

// Watcher: Limpiar campos según el tipo de identificación
watch(esNIT, (esNitNuevo) => {
  if (esNitNuevo) {
    // Si es NIT, limpiar nombres y apellidos
    formData.value.nombres = '';
    formData.value.primerApellido = '';
    formData.value.segundoApellido = '';
  } else {
    // Si NO es NIT, limpiar nombre completo (se auto-calculará)
    // No limpiar aquí, dejar que el otro watcher lo calcule
  }
});

const loadSelectOptions = async () => {
  try {
    // Cargar todas las opciones
    const [ciudadesResp, regimenesResp, tiposIdentResp, tiposImpuestoResp] = await Promise.all([
      apiClient.get('/terceros/select/ciudades'),
      apiClient.get('/terceros/select/tipo-regimen'),
      apiClient.get('/terceros/select/tipo-ident'),
      apiClient.get('/terceros/select/tipo-impuesto')
    ]);
    
    ciudades.value = ciudadesResp.data.map((c: any) => ({ label: c.nombre, value: c.codigo }));
    regimenes.value = regimenesResp.data.map((r: any) => ({ label: r.nombre, value: r.codigo }));
    tiposIdent.value = tiposIdentResp.data.map((t: any) => ({ label: t.nombre, value: t.codigo }));
    tiposImpuesto.value = tiposImpuestoResp.data.map((t: any) => ({ label: t.nombre, value: t.codigo }));
  } catch (error) {
    console.error('Error cargando opciones:', error);
  }
};

const loadTercero = async () => {
  try {
    loadingData.value = true;
    const codigo = parseInt(route.params.codigo as string);
    const tercero = await terceroService.getById(codigo);
    formData.value = { ...tercero };
  } catch (error) {
    $q.notify({
      type: 'negative',
      message: 'Error al cargar tercero'
    });
    router.push('/terceros');
  } finally {
    loadingData.value = false;
  }
};

const handleSubmit = async () => {
  try {
    loading.value = true;
    const codigo = parseInt(route.params.codigo as string);
    await terceroService.update(codigo, formData.value);
    $q.notify({
      type: 'positive',
      message: 'Tercero actualizado exitosamente'
    });
    router.push('/terceros');
  } catch (error: any) {
    const message = error?.response?.data?.message || 'Error al actualizar el tercero';
    $q.notify({
      type: 'negative',
      message
    });
  } finally {
    loading.value = false;
  }
};

const handleCancel = () => {
  router.push('/terceros');
};

onMounted(() => {
  loadSelectOptions();
  loadTercero();
});
</script>


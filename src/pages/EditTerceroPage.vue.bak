          icon="arrow_back"
          color="grey-7"
          @click="handleCancel"
          class="back-btn"
        >
          <q-tooltip>Volver</q-tooltip>
        </q-btn>
        <div class="header-content">
          <q-icon name="edit" size="40px" color="primary" />
          <div class="header-text">
            <h1 class="form-title">Editar Tercero</h1>
            <p class="form-subtitle">Actualice la información del tercero</p>
          </div>
        </div>
      </div>

      <!-- Form Card -->
      <q-card flat class="form-card">
        <div v-if="loadingData" class="q-pa-lg text-center">
          <q-spinner color="primary" size="50px" />
          <p class="q-mt-md">Cargando datos...</p>
        </div>

        <q-form v-else @submit="handleSubmit" class="form-content">
          <!-- Información de Identificación -->
          <div class="form-section">
            <div class="row q-col-gutter-sm">
              <!-- Tipo Identificación -->
              <div class="col-12 col-md-3">
                <div class="input-wrapper">

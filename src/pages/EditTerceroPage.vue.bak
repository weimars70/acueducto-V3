                    placeholder="Segundo apellido"
                    outlined
                    dense
                    :disable="esNIT"
                    class="modern-input"
                  >
                    <template v-slot:prepend>
                      <q-icon name="person_outline" color="grey-6" size="18px" />
                    </template>
                  </q-input>
                </div>
              </div>
            </div>

            <!-- Tercera fila: Nombre Completo + Segundo Apellido -->

                    :options="regimenes"
                    emit-value
                    map-options
                    outlined
                    dense
                    placeholder="Seleccione régimen"
                    class="modern-input"
                  >
                    <template v-slot:prepend>
                      <q-icon name="business" color="grey-6" size="18px" />
                    </template>
                  </q-select>
                </div>
              </div>

              <div class="col-12 col-md-6">

                    <template v-slot:prepend>
                      <q-icon name="badge" color="grey-6" size="18px" />
                    </template>
                  </q-select>
                </div>
              </div>

              <!-- Identificación -->
              <div class="col-12 col-md-5">
                <div class="input-wrapper">
                  <label class="input-label">Identificación</label>
                  <q-input
                    v-model="formData.identificacion"
                    placeholder="Número de identificación"
                    outlined
                    dense
                    class="modern-input"
                  >
                    <template v-slot:prepend>
                      <q-icon name="fingerprint" color="grey-6" size="18px" />
                    </template>
                  </q-input>
                </div>
              </div>

              <!-- DV (Dígito de Verificación) - Solo lectura y máximo 2 dígitos -->
              <div class="col-12 col-md-1">
                <div class="input-wrapper">
                  <label class="input-label">DV</label>
                  <q-input
                    v-model="formData.dv"
                    type="text"
                    placeholder="--"
                    outlined
                    dense
                    readonly
                    maxlength="2"
                    class="modern-input dv-input"
                    bg-color="grey-2"
                  >
                    <q-tooltip>Dígito de verificación (calculado automáticamente)</q-tooltip>
                  </q-input>
                </div>
              </div>

              <!-- Ciudad -->
              <div class="col-12 col-md-3">
                <div class="input-wrapper">
                  <label class="input-label">Ciudad <span class="required">*</span></label>
                  <q-select
                    v-model="formData.ciudadCodigo"
                    :options="ciudades"
                    emit-value
                    map-options
                    outlined
                    dense
                    placeholder="Seleccione ciudad"
                    :rules="[val => !!val || 'Campo requerido']"
                    class="modern-input"
                  >
                    <template v-slot:prepend>
                      <q-icon name="location_city" color="grey-6" size="18px" />
                    </template>
                  </q-select>
                </div>
              </div>
            </div>

            <!-- Segunda fila: Nombres/Apellidos o Nombre Completo según tipo -->
            <div class="row q-col-gutter-sm">
              <!-- Nombres - Deshabilitado si es NIT -->
              <div class="col-12 col-md-4">
                <div class="input-wrapper">
                  <label class="input-label">Nombres</label>
                  <q-input
                    v-model="formData.nombres"
                    placeholder="Nombres"
                    outlined
                    dense
                    :disable="esNIT"
                    class="modern-input"
                  >
                    <template v-slot:prepend>
                      <q-icon name="person" color="grey-6" size="18px" />
                    </template>
                  </q-input>
                </div>
              </div>

              <!-- Primer Apellido - Deshabilitado si es NIT -->
              <div class="col-12 col-md-4">
                <div class="input-wrapper">
                  <label class="input-label">Primer Apellido</label>
                  <q-input
